<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    app:cardBackgroundColor="#FFFFFF"
                                    android:id="@+id/mcardview"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_margin="8dp"
                                    android:orientation="vertical" app:cardElevation="8dp">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="@string/textviewfact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewFact" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
                android:textStyle="bold"/>
        <TextView
                android:text="@string/textviewcategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCategory" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewFact"
                app:layout_constraintStart_toStartOf="@+id/textViewFact" android:textAlignment="center"
                android:textColor="#FFFFFF" android:background="@color/colorAccent" android:textStyle="bold"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>