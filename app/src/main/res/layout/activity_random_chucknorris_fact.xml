<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.RandomChuckNorrisFacts" android:focusable="auto" android:elevation="8dp"
        android:clickable="true" android:id="@+id/randomJokeConstraintLayout">

    <android.support.v7.widget.RecyclerView
            android:layout_width="392dp"
            android:layout_height="602dp"
            android:id="@+id/myRecyclerView" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/button_request_fact"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:id="@+id/buttonRequestFact"
            app:layout_constraintTop_toBottomOf="@+id/myRecyclerView"
            app:layout_constraintStart_toStartOf="@+id/myRecyclerView"
            android:layout_marginStart="104dp"
            android:textColor="#FFFFFF"
            android:background="@color/colorAccent"
            android:elevation="8dp" android:textAlignment="center"
            android:shadowColor="@color/colorPrimary" android:layout_marginTop="4dp"/>

</android.support.constraint.ConstraintLayout>