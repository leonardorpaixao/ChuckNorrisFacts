<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ChuckNorrisFactsByCategory" android:background="@android:color/transparent"
        android:id="@+id/myConstraintLayout">

    <Spinner
            android:layout_width="173dp"
            android:layout_height="38dp"
            android:id="@+id/mySpinner"
            android:textAllCaps="true"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="92dp"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.228"/>
    <TextView
            android:text="@string/category"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:id="@+id/textView3" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:gravity="center"
            android:layout_marginStart="8dp"/>
    <ImageButton
            android:text="@string/button_request_fact"
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:id="@+id/buttonRequest"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mySpinner" android:layout_marginStart="8dp"
            android:drawableBottom="@android:drawable/ic_input_add"
            android:backgroundTint="@android:color/transparent" android:src="@drawable/outline_search_black_18dp"
            android:contentDescription="@string/button_request_fact" android:elevation="1dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="406dp"
            android:layout_height="591dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:id="@+id/recyclerViewfFactByCategory" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="76dp" app:layout_constraintHorizontal_bias="0.545"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/mySpinner"
            app:layout_constraintVertical_bias="1.0"/>

</android.support.constraint.ConstraintLayout>